<%- include('partials/header') -%>

<div class="sign-up">
    <div id="sty">
    <h2>Enter Your Details To Create Account</h2>
    <form action="/user/signup" method="post">
        <label for="username"></label>
        <input type="text" placeholder="   Input Your Username" name="name" id="username" required>
        <br>
        <br>
        <label for="email"></label>
        <input type="email" placeholder="   Input Your Email" name="email" required>
<br>
<br>
        <label for="password"></label>
        <input type="password" placeholder="   Input Your Password"  id="password" name="password" required>
<br>
<br>
        <button type="submit">Sign Up</button>
    </form>

    <p>Already have an account? <a href="/account/login"><b>Login</b></a></p>
    </div>
</div>
